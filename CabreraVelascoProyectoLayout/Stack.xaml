<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CabreraVelascoProyectoLayout.Stack"
             Title="Stack"
             Background="Cornsilk" >
    <VerticalStackLayout Margin="30"
                         Spacing="30">
        <Label 
        Text="Cabrera y Velasco"
        FontSize="50"
        VerticalOptions="Center" 
        HorizontalOptions="Center" 
        FontFamily="Pacifico"
        TextColor="Black"/>
        <Label 
        Text="Sole y Crhystel"
        FontSize="40"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        FontFamily="Pacifico"
        TextColor="Black"/>
        <Label 
        Text="Tapia y Sarango"
        FontSize="30"
        VerticalOptions="Center" 
        FontFamily="Pacifico"
        HorizontalOptions="Center" 
        TextColor="Black"/>
        <Button
        x:Name="Buton"
        Text="Llevar a flex"
        BackgroundColor="DarkOliveGreen"
        FontFamily="Pacifico"
        Clicked="Buton_Clicked"
        />
    </VerticalStackLayout>
</ContentPage>