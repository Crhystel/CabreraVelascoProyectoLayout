<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CabreraVelascoProyectoLayout.Stack"
             Title="Stack"
             Background="Beige">
    <VerticalStackLayout Margin="30"
                         Spacing="10">
        <Label 
        Text="Cabrera y Velasco"
        FontSize="30"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        <Label 
        Text="Sole y Crhystel"
        FontSize="20"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        <Label 
        Text="Tapia y Sarango"
        FontSize="10"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
        <Button
        x:Name="Buton"
        Text="Llevar a flex"
        Clicked="Buton_Clicked"
        />
    </VerticalStackLayout>
</ContentPage>